{
  "name": "sweet-i18n",
  "private": "true",
  "author": "wood3n",
  "homepage": "https://github.com/wood3n/sweet-i18n",
  "description": "a nodejs cli tool that transforms chinese characters automaticly",
  "keywords": [
    "nodejs",
    "typescript",
    "esbuild",
    "cli",
    "frontend",
    "i18n",
    "react",
    "vue"
  ],
  "license": "MIT",
  "scripts": {
    "build": "cd packages/sugar18 && node esbuild.js",
    "link": "cd packages/sugar18 && pnpm link --global",
    "dev:vs": "cd packages/vs-extensions && node esbuild.js --watch",
    "build:vs": "cd packages/vs-extensions && node esbuild.js",
    "doc": "cd packages/docs && yarn start",
    "doc:build": "cd packages/docs && yarn build"
  },
  "dependencies": {
    "@algolia/client-search": "^4.12.0",
    "@vue/compiler-core": "^3.2.26"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js}": "eslint --fix"
  },
  "trust": {
    "pattern": "./examples/src/**/*.{vue,js}",
    "importPath": "@/i18n"
  }
}
